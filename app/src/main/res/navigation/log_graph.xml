<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.hfad.ansormarket.logInScreens.IntroFragment"
        android:label=""
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_introFragment_to_OTPFragment"
            app:destination="@id/OTPFragment"
            app:popUpTo="@id/introFragment" />
    </fragment>
    <fragment
        android:id="@+id/OTPFragment"
        android:name="com.hfad.ansormarket.logInScreens.OTPFragment"
        android:label="fragment_o_t_p"
        tools:layout="@layout/fragment_o_t_p">
        <argument
            android:name="OTP"
            app:argType="string" />
        <argument
            android:name="resendToken"
            app:argType="com.google.firebase.auth.PhoneAuthProvider$ForceResendingToken" />
        <argument
            android:name="phoneNumber"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
        <action
            android:id="@+id/action_OTPFragment_to_introFragment"
            app:destination="@id/introFragment"
            app:popUpTo="@id/introFragment" />
    </fragment>

</navigation>