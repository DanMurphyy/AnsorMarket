<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainPageFragment">

    <fragment
        android:id="@+id/mainPageFragment"
        android:name="com.hfad.ansormarket.mainFragments.MainPageFragment"
        android:label="@string/goods"
        tools:layout="@layout/fragment_main_page" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.hfad.ansormarket.mainFragments.CartFragment"
        android:label="@string/cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/myProfileFragment"
        android:name="com.hfad.ansormarket.mainFragments.MyProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_my_profile" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.hfad.ansormarket.mainFragments.OrdersFragment"
        android:label="@string/myOrders"
        tools:layout="@layout/fragment_orders">
        <action
            android:id="@+id/action_ordersFragment_to_activeOrdersFragment"
            app:destination="@id/activeOrdersFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"
            app:popUpTo="@id/ordersFragment" />
    </fragment>
    <fragment
        android:id="@+id/activeOrdersFragment"
        android:name="com.hfad.ansormarket.mainFragments.ActiveOrdersFragment"
        android:label="@string/active_orders"
        tools:layout="@layout/fragment_active_orders" >
        <action
            android:id="@+id/action_activeOrdersFragment_to_completedOrdersFragment"
            app:destination="@id/completedOrdersFragment" />
    </fragment>
    <fragment
        android:id="@+id/completedOrdersFragment"
        android:name="com.hfad.ansormarket.mainFragments.CompletedOrdersFragment"
        android:label="@string/completed_orders"
        tools:layout="@layout/fragment_completed_orders" />
</navigation>